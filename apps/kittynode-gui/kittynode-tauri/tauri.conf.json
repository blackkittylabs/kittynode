{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Kittynode",
  "identifier": "com.kittynode.app",
  "build": {
    "beforeDevCommand": "pnpm -F kittynode-frontend dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm -F kittynode-frontend build",
    "frontendDist": "../kittynode-frontend/build"
  },
  "app": {
    "windows": [
      {
        "title": "Kittynode",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
