{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-show",
    "dialog:default",
    "os:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/*"
        }
      ]
    }
  ]
}
