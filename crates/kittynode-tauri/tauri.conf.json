{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "kittynode",
  "identifier": "com.kittynode.app",
  "build": {
    "beforeDevCommand": "bun --filter kittynode-gui dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun --filter kittynode-gui build",
    "frontendDist": "../../packages/kittynode-gui/build"
  },
  "app": {
    "windows": [
      {
        "title": "kittynode",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
